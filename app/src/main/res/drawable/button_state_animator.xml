<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="50"
                android:valueTo="0.85"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="50"
                android:valueTo="0.85"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="50"
                android:valueTo="4dp"
                android:valueType="floatType"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="75"
                android:valueTo="1.0"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="75"
                android:valueTo="1.0"
                android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="75"
                android:valueTo="0dp"
                android:valueType="floatType"/>
        </set>
    </item>
</selector>